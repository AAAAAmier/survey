<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:paddingLeft="10dp"
        android:text="Question 2"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:paddingHorizontal="50dp"
        android:text="How much does your phone\ncoset?"
        android:textSize="20sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="276dp">

        <RadioButton
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:checked="true"
            android:text="Under 1000"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:text="1000-1999"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:text="2000-2999"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/checkBox4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:text="3000-3999"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/checkBox5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:text="More than 4000"
            android:textSize="17sp" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginLeft="28dp"
        android:background="@color/colorPrimary"
        android:text="Next"
        android:textSize="17sp" />

    <!-- END    : Your code should be within this block -->

</LinearLayout>
